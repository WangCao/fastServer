<body>
  <main role="main">
    <article id="webslides" class="vertical">
      <!-- Quick Guide
          - Each parent <section> in the <article id="webslides"> element is an individual slide.
          - Vertical sliding = <article id="webslides" class="vertical">
          - <div class="wrap"> = container 90% / <div class="wrap size-50"> = 45%;
        -->
      <% data.pages && data.pages.forEach(function(page){ %>
      <% if (page.type === 'home') { %>
      <section>
        <!-- <span class="background" style="background-image:url('https://webslides.tv/static/images/nature.jpg')"></span> -->
        <!--.wrap = container (width: 90%) -->
        <div class="wrap aligncenter">
          <h1><strong><%= page.title %></strong></h1>
          <p class="text-intro">
            <%= page.subtitle%>
          </p>
        </div>
        <!-- .end .wrap -->
      </section>
      <% } %>
      <% if (page.type === 'card') { %>
      <section>
        <div class="wrap size-50 aligncenter">
          <h2><strong><%= page.title %></strong></h2>
          <p class="text-intro">
            <%= page.subtitle %>
          </p>
          <div class="bg-white shadow">
            <ul class="flexblock reasons">
              <% page.cards.forEach(function (card) {%>
              <li>
                <h2><%= card.title%></h2>
                <p><%= card.msg%></p>
              </li>
              <% });%>
            </ul>
          </div>
        </div>
        <!-- .end .wrap -->
      </section>
      <% } %>

      <% if (page.type === 'left_msg_right_image') { %>
      <section>
        <div class="wrap">
          <div class="grid vertical-align">
            <div class="column">
              <h2><strong><%= page.title %></strong></h2>
              <p class="text-intro">
                <%= page.msg %>
              </p>

              <ul class="description">
                <% page.table && page.table.forEach(function (item) {%>
                <li>
                  <span class="text-label"><%= item.key%></span>
                  <%= item.value%>
                </li>
                <% });%>
              </ul>
            </div>
            <div class="column">
              <img src="<%= page.img %>" alt="Pixel Phone">
            </div>
          </div>
        </div>
      </section>
      <% } %>
      <% if (page.type === 'title-msg') { %>
      <section>
        <div class="wrap size-50 bg-white">
          <h3><strong><%= page.title%></strong></h3>
          <p class="text-intro"><%= page.subtitle%></p>
          <hr>
          <% page.lines.forEach(function (item) {%>
          <p><%= item %></p>
          <% });%>
        </div>
      </section>
      <% } %>

      <% if (page.type === 'bye') { %>
      <section class="bg-apple aligncenter">
        <h2 class="text-emoji zoomIn">ðŸ˜Ž</h2>
        <h3><strong><%= page.title %></strong></h2>
      </section>
      <% } %>


      <% }); %>


    </article>
    <!-- end article -->
  </main>
  <!-- end main -->

